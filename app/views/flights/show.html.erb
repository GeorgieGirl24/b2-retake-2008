<h2><%= @flight.number %>'s Homepage </h2>
<section id="flight-info">
  <p>Flight Number: <%= @flight.number %></p>
  <p>Date: <%= @flight.date %></p>
  <p>Time: <%= @flight.time %></p>
  <p>Departure City: <%= @flight.departure_city %></p>
  <p>Arrival City: <%= @flight.arrival_city %></p>
</section>

<section id="airline-info">
  <p>Airline Carrier: <%= @flight.airline_name %></p>
</section>

<section id="passengers">
  <h3>All Passengers on this Flight:</h3>
  <% @flight.passengers.each do |passenger| %>
    <p>Name: <%= passenger.name%></p>
  <% end %>
</section>

<section id="minors">
  <h3>Total Number of Minors:</h3>
  <p>Number of Minors: <%= @flight.number_of_minors%></p>
</section>
<section id="adults">
  <h3>Total Number of Adults:</h3>
  <p>Number of Adults: <%= @flight.number_of_adults%></p>
</section>
